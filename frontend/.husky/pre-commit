#!/bin/sh
# Frontend pre-commit hook: build, test, and lint

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix linting errors before committing."
  exit 1
fi

# Run tests (non-interactive)
echo "ğŸ§ª Running tests..."
npm test -- --watchAll=false --coverage=false
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
fi

# Run build
echo "ğŸ”¨ Running build..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix build errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
