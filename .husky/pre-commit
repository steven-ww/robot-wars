#!/bin/sh
# Robot Wars pre-commit hook: check frontend build, test, and lint

echo "ğŸ” Running Robot Wars pre-commit checks..."

# Change to frontend directory
cd frontend

# Check if frontend directory exists and has package.json
if [ ! -f "package.json" ]; then
  echo "âš ï¸ Frontend package.json not found, skipping frontend checks"
  exit 0
fi

echo "ğŸ“ Running frontend ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Frontend ESLint failed. Please fix linting errors before committing."
  exit 1
fi

echo "ğŸ§ª Running frontend tests..."
npm test -- --watchAll=false --coverage=false
if [ $? -ne 0 ]; then
  echo "âŒ Frontend tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "ğŸ”¨ Running frontend build..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Frontend build failed. Please fix build errors before committing."
  exit 1
fi

echo "âœ… All frontend pre-commit checks passed!"

# Return to root directory
cd ..
